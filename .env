# Environment configuration for the Mesh-terious Warehouse stack

# RabbitMQ settings
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# MinIO / Iceberg
MINIO_ENDPOINT=http://localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
ICEBERG_CATALOG=local

# OpenMetadata
OPENMETADATA_HOSTPORT=http://localhost:8585/api

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=CHANGE_ME
AIRFLOW__WEBSERVER__BASE_URL=http://localhost:8080

# Superset
SUPERSET_SECRET_KEY=CHANGE_ME
SUPERSET_SQLALCHEMY_DATABASE_URI=sqlite:////app/superset.db

# DuckDB
DUCKDB_PATH=/data/warehouse.duckdb
